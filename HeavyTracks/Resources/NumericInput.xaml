<UserControl
    x:Class="HeavyTracks.Resources.NumericInput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HeavyTracks.Resources"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    x:Name="self"
    d:DesignHeight="38.3"
    d:DesignWidth="404"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBox
            VerticalContentAlignment="Center"
            d:Text="1234"
            Background="{x:Null}"
            BorderBrush="{DynamicResource TextBrightness.1}"
            CaretBrush="{DynamicResource TextBrightness.3}"
            FlowDirection="LeftToRight"
            Foreground="{DynamicResource TextBrightness.3}"
            Text="{Binding Number, ElementName=self, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="NoWrap" />
    </Grid>
</UserControl>
