<UserControl
    x:Class="HeavyTracks.Resources.NumericInput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HeavyTracks.Resources"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="58.8"
    d:DesignWidth="404"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="30" />
        </Grid.ColumnDefinitions>
        <TextBox
            Grid.RowSpan="2"
            VerticalContentAlignment="Center"
            d:Text="1234"
            FlowDirection="RightToLeft" />
        <Border
            Grid.RowSpan="2"
            BorderBrush="Black"
            BorderThickness="1" />
        <Button
            Grid.Column="1"
            Click="Button_Click"
            Content="^" />
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Content="V" />
    </Grid>
</UserControl>
