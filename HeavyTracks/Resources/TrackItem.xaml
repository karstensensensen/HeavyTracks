<UserControl
    x:Class="HeavyTracks.Resources.TrackItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HeavyTracks.Resources"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    d:DesignHeight="44.099"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Label
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            d:Content="1"
            Content="{Binding TrackNumber}"
            Foreground="{StaticResource TextBrightness.1}" />
        <Label
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="Track Title"
            Foreground="{StaticResource TextBrightness.1}" />
        <Label
            Grid.Column="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="999"
            Foreground="{StaticResource TextBrightness.1}" />
        <Label
            Grid.Column="3"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="Album Name"
            Foreground="{StaticResource TextBrightness.1}" />
        <Button
            Grid.Column="2"
            Width="18"
            Height="18"
            Margin="126,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="+">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="100" />
                </Style>
            </Button.Resources>
        </Button>
        <Button
            Grid.Column="2"
            Width="18"
            Height="18"
            Margin="126,26,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="-">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="100" />
                </Style>
            </Button.Resources>
        </Button>
        <Label
            Grid.Column="4"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="4:20"
            Foreground="{StaticResource TextBrightness.1}" />
    </Grid>
</UserControl>
